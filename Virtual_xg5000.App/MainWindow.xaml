<Window x:Class="Virtual_xg5000.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Virtual_xg5000.App.ViewModels"
        xmlns:models="clr-namespace:Virtual_xg5000.App.Models"
        mc:Ignorable="d"
        Title="Virtual XG5000 - Ladder Studio"
        FontFamily="Segoe UI"
        MinHeight="720"
        MinWidth="1100"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Window.Resources>
        <Color x:Key="WindowGradientTop">#121C33</Color>
        <Color x:Key="WindowGradientBottom">#060B16</Color>
        <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource WindowGradientTop}" Offset="0"/>
            <GradientStop Color="{StaticResource WindowGradientBottom}" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="SurfaceBrush" Color="#121B2B"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#19263B"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#23344E"/>
        <SolidColorBrush x:Key="SurfaceCardBrush" Color="#1F2E45"/>
        <SolidColorBrush x:Key="ElementCardBrush" Color="#233550"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#5C8BFF"/>
        <SolidColorBrush x:Key="AccentBrushHover" Color="#6D9BFF"/>
        <SolidColorBrush x:Key="AccentBrushPressed" Color="#3F71FF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F6F9FF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A8B8CF"/>
        <SolidColorBrush x:Key="RailBrush" Color="#8796AC"/>
        <SolidColorBrush x:Key="SymbolStrokeBrush" Color="#E4E9F2"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#24344B"/>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrushHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrushPressed}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#2A3C57"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="#314662"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#36507A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2B4368"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToolboxListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Background" Value="#1F2F45"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Container"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderThickness="1"
                                BorderBrush="#2D425F">
                            <ContentPresenter Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Container" Property="Background" Value="#253B58"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Container" Property="Background" Value="#2D4470"/>
                                <Setter TargetName="Container" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ToolboxItemTemplate" DataType="{x:Type viewModels:MainViewModel+LadderToolOption}">
            <StackPanel>
                <TextBlock Text="{Binding Name}"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="{Binding Description}"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="NormallyOpenTemplate">
            <Canvas Width="100" Height="60">
                <Line X1="0" Y1="30" X2="20" Y2="30"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"/>
                <Line X1="20" Y1="10" X2="20" Y2="50"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"/>
                <Line X1="80" Y1="10" X2="80" Y2="50"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"/>
                <Line X1="80" Y1="30" X2="100" Y2="30"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"/>
            </Canvas>
        </DataTemplate>

        <DataTemplate x:Key="NormallyClosedTemplate">
            <Canvas Width="100" Height="60">
                <Line X1="0" Y1="30" X2="20" Y2="30"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"/>
                <Line X1="20" Y1="10" X2="20" Y2="50"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"/>
                <Line X1="80" Y1="10" X2="80" Y2="50"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"/>
                <Line X1="18" Y1="10" X2="82" Y2="50"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="2.5"/>
                <Line X1="80" Y1="30" X2="100" Y2="30"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"/>
            </Canvas>
        </DataTemplate>

        <DataTemplate x:Key="CoilTemplate">
            <Canvas Width="100" Height="60">
                <Line X1="0" Y1="30" X2="20" Y2="30"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"/>
                <Path Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"
                      Fill="Transparent"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"
                      Data="M20,30 C35,0 65,0 80,30"/>
                <Path Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"
                      Fill="Transparent"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"
                      Data="M20,30 C35,60 65,60 80,30"/>
                <Line X1="80" Y1="30" X2="100" Y2="30"
                      Stroke="{StaticResource SymbolStrokeBrush}"
                      StrokeThickness="3"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"/>
            </Canvas>
        </DataTemplate>

        <Style x:Key="LadderSymbolContentStyle" TargetType="ContentControl">
            <Setter Property="ContentTemplate" Value="{StaticResource NormallyOpenTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementType}" Value="{x:Static models:LadderElementType.NormallyClosedContact}">
                    <Setter Property="ContentTemplate" Value="{StaticResource NormallyClosedTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ElementType}" Value="{x:Static models:LadderElementType.Coil}">
                    <Setter Property="ContentTemplate" Value="{StaticResource CoilTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}"
                BorderThickness="0,0,1,0"
                Padding="28,32">
            <StackPanel>
                <TextBlock Text="Toolbox"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Select a ladder element to place on the canvas."
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
                <Button Content="+ Add Rung"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,28,0,0"
                        Command="{Binding AddRungCommand}"/>
                <ListBox ItemsSource="{Binding Tools}"
                         SelectedItem="{Binding SelectedTool, Mode=TwoWay}"
                         ItemTemplate="{StaticResource ToolboxItemTemplate}"
                         ItemContainerStyle="{StaticResource ToolboxListItemStyle}"
                         Margin="0,24,0,0"
                         Background="Transparent"
                         BorderThickness="0"
                         FocusVisualStyle="{x:Null}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource PanelBorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="32,28">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Ladder Canvas"
                                   FontSize="26"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Build your logic by adding rungs and placing contacts or coils."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Background="#1D2C43"
                            BorderBrush="{StaticResource PanelBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="16,10"
                            Margin="28,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Rungs"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="13"
                                       Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding Rungs.Count}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1"
                          Padding="36"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Rungs}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModels:RungViewModel}">
                            <Border Margin="0,0,0,32"
                                    Padding="26"
                                    Background="{StaticResource SurfaceCardBrush}"
                                    CornerRadius="16"
                                    BorderBrush="#283B5A"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000"
                                                      Opacity="0.32"
                                                      BlurRadius="18"
                                                      ShadowDepth="6"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="22"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="Use the button to place the selected tool onto this rung."
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="12"
                                                       Margin="0,6,0,0"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="Add Element"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Padding="20,8"
                                                Command="{Binding DataContext.AddElementCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="18"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="18"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="1"
                                                Background="{StaticResource RailBrush}"
                                                Width="3"
                                                CornerRadius="1.5"/>

                                        <Border Grid.Column="3"
                                                Background="{StaticResource RailBrush}"
                                                Width="3"
                                                CornerRadius="1.5"/>

                                        <Border Grid.Column="2"
                                                Margin="18,0"
                                                Padding="20"
                                                Background="#1B293E"
                                                CornerRadius="14"
                                                BorderBrush="#2B3E5D"
                                                BorderThickness="1">
                                            <ItemsControl ItemsSource="{Binding Elements}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate DataType="{x:Type viewModels:LadderElementViewModel}">
                                                        <Border Margin="0,0,20,0"
                                                                Padding="14,12"
                                                                Background="{StaticResource ElementCardBrush}"
                                                                CornerRadius="14"
                                                                BorderBrush="#314768"
                                                                BorderThickness="1">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#000000"
                                                                                  Opacity="0.25"
                                                                                  BlurRadius="12"
                                                                                  ShadowDepth="4"/>
                                                            </Border.Effect>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <Viewbox Grid.Row="0"
                                                                         Grid.Column="0"
                                                                         Grid.RowSpan="3"
                                                                         Margin="0,0,14,0">
                                                                    <ContentControl Style="{StaticResource LadderSymbolContentStyle}"
                                                                                    Content="{Binding}"/>
                                                                </Viewbox>

                                                                <Button Grid.Row="0"
                                                                        Grid.Column="1"
                                                                        HorizontalAlignment="Right"
                                                                        Style="{StaticResource IconButtonStyle}"
                                                                        ToolTip="Remove element"
                                                                        Command="{Binding DataContext.RemoveElementCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                        CommandParameter="{Binding}">
                                                                    <Path Width="10"
                                                                          Height="10"
                                                                          Stroke="{StaticResource TextPrimaryBrush}"
                                                                          StrokeThickness="2"
                                                                          Data="M2,2 L8,8 M8,2 L2,8"/>
                                                                </Button>

                                                                <StackPanel Grid.Row="1"
                                                                            Grid.Column="1"
                                                                            Margin="0,8,0,0">
                                                                    <TextBlock Text="{Binding DisplayName}"
                                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                                               FontWeight="SemiBold"/>
                                                                    <TextBox Text="{Binding Label, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                             Margin="0,8,0,0"
                                                                             Width="128"
                                                                             HorizontalContentAlignment="Center"
                                                                             Background="#1A2539"
                                                                             Foreground="{StaticResource TextPrimaryBrush}"
                                                                             BorderBrush="#2D3F5C"
                                                                             BorderThickness="1"
                                                                             Padding="6,4"
                                                                             ToolTip="Edit the element address"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
